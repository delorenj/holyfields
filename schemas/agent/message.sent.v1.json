{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://33god.dev/schemas/agent/message.sent.v1.json",
  "title": "Agent Message Sent Event",
  "description": "Outbound response sent by an agent",
  "type": "object",
  "allOf": [
    { "$ref": "../_common/base_event.v1.json" }
  ],
  "properties": {
    "event_type": {
      "type": "string",
      "const": "agent.message.sent",
      "description": "Event type discriminator"
    },
    "payload": {
      "type": "object",
      "properties": {
        "agent_name": {
          "$ref": "../_common/types.v1.json#/$defs/agent_name",
          "description": "Name of the agent that sent the message"
        },
        "channel": {
          "$ref": "../_common/types.v1.json#/$defs/channel_type",
          "description": "Channel the message was sent to"
        },
        "message_preview": {
          "type": "string",
          "maxLength": 200,
          "description": "First 200 characters of the response"
        },
        "message_length": {
          "type": "integer",
          "minimum": 0,
          "description": "Total length of the response in characters"
        },
        "model": {
          "$ref": "../_common/types.v1.json#/$defs/model_name",
          "description": "AI model used to generate the response"
        },
        "tokens_used": {
          "type": "integer",
          "minimum": 0,
          "description": "Total tokens consumed (input + output)"
        },
        "duration_ms": {
          "type": "integer",
          "minimum": 0,
          "description": "Time to generate response in milliseconds"
        }
      },
      "required": ["agent_name", "channel", "message_preview", "message_length"]
    }
  },
  "required": ["event_type", "payload"]
}
