{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://33god.dev/schemas/agent/task.assigned.v1.json",
  "title": "Agent Task Assigned Event",
  "description": "External task routed to an agent",
  "type": "object",
  "allOf": [
    { "$ref": "../_common/base_event.v1.json" }
  ],
  "properties": {
    "event_type": {
      "type": "string",
      "const": "agent.task.assigned",
      "description": "Event type discriminator"
    },
    "payload": {
      "type": "object",
      "properties": {
        "agent_name": {
          "$ref": "../_common/types.v1.json#/$defs/agent_name",
          "description": "Name of the agent the task is assigned to"
        },
        "source": {
          "type": "string",
          "description": "Who assigned the task (e.g., 'plane', 'cack', 'jarad')"
        },
        "task_type": {
          "type": "string",
          "enum": ["ticket", "message", "cron", "adhoc"],
          "description": "Type of task"
        },
        "task_preview": {
          "type": "string",
          "maxLength": 200,
          "description": "First 200 characters of the task description"
        }
      },
      "required": ["agent_name", "source", "task_type", "task_preview"]
    }
  },
  "required": ["event_type", "payload"]
}
