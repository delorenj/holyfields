{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://33god.dev/schemas/agent/thread/error.v1.json",
  "title": "Agent Thread Error Event",
  "description": "Agent interaction failed",
  "type": "object",
  "allOf": [
    { "$ref": "../../_common/base_event.v1.json" }
  ],
  "properties": {
    "event_type": {
      "type": "string",
      "const": "agent.thread.error",
      "description": "Event type discriminator"
    },
    "payload": {
      "type": "object",
      "properties": {
        "agent_name": {
          "$ref": "../../_common/types.v1.json#/$defs/agent_name",
          "description": "Name of the agent that failed"
        },
        "provider": {
          "type": "string",
          "description": "LLM provider"
        },
        "model": {
          "$ref": "../../_common/types.v1.json#/$defs/model_name",
          "description": "Model that failed"
        },
        "error_message": {
          "type": "string",
          "description": "Error message"
        },
        "error_code": {
          "type": ["string", "null"],
          "description": "Error code if available"
        },
        "is_retryable": {
          "type": "boolean",
          "description": "Whether the error is retryable"
        },
        "retry_count": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of retry attempts"
        }
      },
      "required": ["agent_name", "provider", "error_message"]
    }
  },
  "required": ["event_type", "payload"]
}
