{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://33god.dev/schemas/agent/thread/prompt.v1.json",
  "title": "Agent Thread Prompt Event",
  "description": "A prompt is sent to an agent thread",
  "type": "object",
  "allOf": [
    { "$ref": "../../_common/base_event.v1.json" }
  ],
  "properties": {
    "event_type": {
      "type": "string",
      "const": "agent.thread.prompt",
      "description": "Event type discriminator"
    },
    "payload": {
      "type": "object",
      "properties": {
        "agent_name": {
          "$ref": "../../_common/types.v1.json#/$defs/agent_name",
          "description": "Name of the agent receiving the prompt"
        },
        "provider": {
          "type": "string",
          "description": "LLM provider (e.g., 'anthropic', 'openai', 'google')"
        },
        "model": {
          "$ref": "../../_common/types.v1.json#/$defs/model_name",
          "description": "Specific model used"
        },
        "prompt": {
          "type": "string",
          "description": "The prompt text"
        },
        "project": {
          "type": ["string", "null"],
          "description": "Git project name if applicable"
        },
        "working_dir": {
          "type": ["string", "null"],
          "description": "Working directory for the session"
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Tags for categorizing this prompt"
        }
      },
      "required": ["agent_name", "provider", "prompt"]
    }
  },
  "required": ["event_type", "payload"]
}
