{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://33god.dev/schemas/agent/thread/response.v1.json",
  "title": "Agent Thread Response Event",
  "description": "Agent responded to prompt",
  "type": "object",
  "allOf": [
    { "$ref": "../../_common/base_event.v1.json" }
  ],
  "properties": {
    "event_type": {
      "type": "string",
      "const": "agent.thread.response",
      "description": "Event type discriminator"
    },
    "payload": {
      "type": "object",
      "properties": {
        "agent_name": {
          "$ref": "../../_common/types.v1.json#/$defs/agent_name",
          "description": "Name of the agent responding"
        },
        "provider": {
          "type": "string",
          "description": "LLM provider"
        },
        "response": {
          "type": "string",
          "description": "The response text"
        },
        "model": {
          "$ref": "../../_common/types.v1.json#/$defs/model_name",
          "description": "Model used for the response"
        },
        "tokens_used": {
          "type": "integer",
          "minimum": 0,
          "description": "Total tokens consumed"
        },
        "duration_ms": {
          "type": "integer",
          "minimum": 0,
          "description": "Time to generate response in milliseconds"
        }
      },
      "required": ["agent_name", "provider", "response"]
    }
  },
  "required": ["event_type", "payload"]
}
