{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://33god.dev/schemas/agent/state.changed.v1.schema.json",
  "title": "Agent State Changed Event",
  "description": "Emitted when an agent changes its internal state or thinking process",
  "type": "object",
  "properties": {
    "event_type": {
      "type": "string",
      "const": "agent.state.changed"
    },
    "timestamp": {
      "$ref": "../../common/schemas/types.json#/$defs/timestamp"
    },
    "agent_id": {
      "type": "string"
    },
    "state": {
      "type": "string",
      "description": "Current state (e.g. 'thinking', 'idle', 'working')"
    },
    "thought_process": {
      "type": "string",
      "description": "Internal monologue or reasoning"
    }
  },
  "required": ["event_type", "timestamp", "agent_id", "state"]
}
