{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://33god.dev/schemas/session/thread/start.v1.json",
  "title": "Session Thread Start Event",
  "description": "Claude Code session started",
  "type": "object",
  "allOf": [
    { "$ref": "../_common/base_event.v1.json" }
  ],
  "properties": {
    "event_type": {
      "type": "string",
      "const": "session.thread.start",
      "description": "Event type discriminator"
    },
    "payload": {
      "type": "object",
      "properties": {
        "session_id": {
          "type": "string",
          "description": "Claude Code session ID"
        },
        "thread_id": {
          "type": ["string", "null"],
          "description": "Thread ID if available"
        },
        "working_directory": {
          "type": "string",
          "description": "Working directory for the session"
        },
        "git_branch": {
          "type": ["string", "null"],
          "description": "Git branch if in a repo"
        },
        "git_remote": {
          "type": ["string", "null"],
          "description": "Git remote URL if available"
        },
        "model": {
          "$ref": "../_common/types.v1.json#/$defs/model_name",
          "description": "Claude model being used"
        },
        "user_prompt": {
          "type": ["string", "null"],
          "description": "Initial user prompt if available"
        },
        "context_files": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Files in context"
        },
        "mcp_servers": {
          "type": "array",
          "items": { "type": "string" },
          "description": "MCP servers configured"
        }
      },
      "required": ["session_id", "working_directory", "model"]
    }
  },
  "required": ["event_type", "payload"]
}
