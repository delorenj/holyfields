{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://33god.dev/schemas/session/thread/error.v1.json",
  "title": "Session Thread Error Event",
  "description": "Error occurred during session",
  "type": "object",
  "allOf": [
    { "$ref": "../_common/base_event.v1.json" }
  ],
  "properties": {
    "event_type": {
      "type": "string",
      "const": "session.thread.error",
      "description": "Event type discriminator"
    },
    "payload": {
      "type": "object",
      "properties": {
        "session_id": {
          "type": "string",
          "description": "Claude Code session ID"
        },
        "thread_id": {
          "type": ["string", "null"],
          "description": "Thread ID"
        },
        "error_type": {
          "type": "string",
          "description": "Type of error"
        },
        "error_message": {
          "type": "string",
          "description": "Error message"
        },
        "stack_trace": {
          "type": ["string", "null"],
          "description": "Stack trace if available"
        },
        "tool_name": {
          "type": ["string", "null"],
          "description": "Tool that caused error"
        },
        "recoverable": {
          "type": "boolean",
          "description": "Whether error is recoverable"
        },
        "turn_number": {
          "type": ["integer", "null"],
          "minimum": 1,
          "description": "Turn number when error occurred"
        }
      },
      "required": ["session_id", "error_type", "error_message"]
    }
  },
  "required": ["event_type", "payload"]
}
