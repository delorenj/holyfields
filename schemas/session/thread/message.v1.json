{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://33god.dev/schemas/session/thread/message.v1.json",
  "title": "Session Thread Message Event",
  "description": "User message or assistant response in session",
  "type": "object",
  "allOf": [
    { "$ref": "../_common/base_event.v1.json" }
  ],
  "properties": {
    "event_type": {
      "type": "string",
      "const": "session.thread.message",
      "description": "Event type discriminator"
    },
    "payload": {
      "type": "object",
      "properties": {
        "session_id": {
          "type": "string",
          "description": "Claude Code session ID"
        },
        "thread_id": {
          "type": ["string", "null"],
          "description": "Thread ID"
        },
        "role": {
          "type": "string",
          "enum": ["user", "assistant"],
          "description": "Message role"
        },
        "content": {
          "type": "string",
          "description": "Message content"
        },
        "turn_number": {
          "type": "integer",
          "minimum": 1,
          "description": "Conversation turn number"
        },
        "tokens": {
          "type": "integer",
          "minimum": 0,
          "description": "Tokens in this message"
        },
        "model": {
          "$ref": "../_common/types.v1.json#/$defs/model_name",
          "description": "Model used for this message"
        },
        "thinking_included": {
          "type": "boolean",
          "description": "Whether thinking tokens were included"
        },
        "tool_calls": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Tool names called in this turn"
        }
      },
      "required": ["session_id", "role", "content", "turn_number"]
    }
  },
  "required": ["event_type", "payload"]
}
