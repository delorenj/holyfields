{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://33god.dev/schemas/session/thread/agent/thinking.v1.json",
  "title": "Session Agent Thinking Event",
  "description": "Claude Code thinking/reasoning event",
  "type": "object",
  "allOf": [
    { "$ref": "../../_common/base_event.v1.json" }
  ],
  "properties": {
    "event_type": {
      "type": "string",
      "const": "session.thread.agent.thinking",
      "description": "Event type discriminator"
    },
    "payload": {
      "type": "object",
      "properties": {
        "session_id": {
          "type": "string",
          "description": "Claude Code session ID"
        },
        "thread_id": {
          "type": ["string", "null"],
          "description": "Thread ID"
        },
        "thinking_text": {
          "type": "string",
          "description": "Thinking/reasoning content"
        },
        "thinking_duration_ms": {
          "type": "integer",
          "minimum": 0,
          "description": "Thinking duration in milliseconds"
        },
        "turn_number": {
          "type": "integer",
          "minimum": 1,
          "description": "Turn number"
        },
        "triggered_by_tool": {
          "type": ["string", "null"],
          "description": "Tool that preceded thinking"
        }
      },
      "required": ["session_id", "thinking_text"]
    }
  },
  "required": ["event_type", "payload"]
}
