{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://33god.dev/schemas/session/thread/end.v1.json",
  "title": "Session Thread End Event",
  "description": "Claude Code session ended",
  "type": "object",
  "allOf": [
    { "$ref": "../_common/base_event.v1.json" }
  ],
  "properties": {
    "event_type": {
      "type": "string",
      "const": "session.thread.end",
      "description": "Event type discriminator"
    },
    "payload": {
      "type": "object",
      "properties": {
        "session_id": {
          "type": "string",
          "description": "Claude Code session ID"
        },
        "thread_id": {
          "type": ["string", "null"],
          "description": "Thread ID if available"
        },
        "end_reason": {
          "type": "string",
          "enum": ["user_stop", "timeout", "error", "completion", "waiting_for_input"],
          "description": "Reason the session ended"
        },
        "duration_seconds": {
          "type": "integer",
          "minimum": 0,
          "description": "Session duration in seconds"
        },
        "total_turns": {
          "type": "integer",
          "minimum": 0,
          "description": "Total conversation turns"
        },
        "total_tokens": {
          "type": "integer",
          "minimum": 0,
          "description": "Total tokens consumed"
        },
        "total_cost_usd": {
          "type": "number",
          "minimum": 0,
          "description": "Total cost in USD"
        },
        "tools_used": {
          "type": "object",
          "description": "Map of tool name to invocation count"
        },
        "files_modified": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Files that were modified"
        },
        "git_commits": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Commit SHAs created"
        },
        "final_status": {
          "type": "string",
          "enum": ["success", "error", "partial", "abandoned"],
          "description": "Final session status"
        },
        "summary": {
          "type": ["string", "null"],
          "description": "Session summary if generated"
        }
      },
      "required": ["session_id", "end_reason", "total_turns", "final_status"]
    }
  },
  "required": ["event_type", "payload"]
}
