{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://33god.dev/schemas/conversation/message.posted.v1.json",
  "title": "Message Posted Event",
  "description": "Emitted when a message is posted in a conversation",
  "type": "object",
  "allOf": [
    { "$ref": "../_common/base_event.v1.json" }
  ],
  "properties": {
    "event_type": {
      "type": "string",
      "const": "conversation.message.posted",
      "description": "Event type discriminator"
    },
    "payload": {
      "type": "object",
      "properties": {
        "conversation_id": {
          "$ref": "../_common/types.v1.json#/$defs/uuid",
          "description": "UUID of the conversation"
        },
        "message_id": {
          "$ref": "../_common/types.v1.json#/$defs/uuid",
          "description": "UUID of this message"
        },
        "author_id": {
          "type": "string",
          "description": "ID of the author (user or agent)"
        },
        "content": {
          "type": "string",
          "minLength": 1,
          "description": "The message content"
        },
        "reply_to_id": {
          "anyOf": [
            { "$ref": "../_common/types.v1.json#/$defs/uuid" },
            { "type": "null" }
          ],
          "description": "ID of the message this is replying to"
        }
      },
      "required": ["conversation_id", "message_id", "author_id", "content"]
    }
  },
  "required": ["event_type", "payload"]
}
