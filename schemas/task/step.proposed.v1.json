{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://33god.dev/schemas/task/step.proposed.v1.json",
  "title": "Task Step Proposed Event",
  "description": "Emitted when a working step is proposed",
  "type": "object",
  "allOf": [
    { "$ref": "../_common/base_event.v1.json" }
  ],
  "properties": {
    "event_type": {
      "type": "string",
      "const": "task.step.proposed",
      "description": "Event type discriminator"
    },
    "payload": {
      "type": "object",
      "properties": {
        "task_id": {
          "$ref": "../_common/types.v1.json#/$defs/uuid",
          "description": "UUID of the task"
        },
        "ticket_id": {
          "type": "string",
          "description": "Ticket or Issue ID (e.g. TICKET-101)"
        },
        "changeset": {
          "type": "object",
          "properties": {
            "file": {
              "type": "string",
              "description": "File path"
            },
            "diff": {
              "type": "string",
              "description": "Proposed diff"
            }
          },
          "required": ["file", "diff"]
        },
        "validation_plan": {
          "type": "string",
          "description": "Command or plan to validate this change (e.g. npm test)"
        }
      },
      "required": ["task_id", "ticket_id", "changeset"]
    }
  },
  "required": ["event_type", "payload"]
}
