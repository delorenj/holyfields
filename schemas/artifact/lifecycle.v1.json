{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://33god.dev/schemas/artifact/lifecycle.v1.json",
  "title": "Artifact Lifecycle Event",
  "description": "Artifact was created, updated, or deleted",
  "type": "object",
  "allOf": [
    { "$ref": "../_common/base_event.v1.json" }
  ],
  "properties": {
    "event_type": {
      "type": "string",
      "enum": ["artifact.created", "artifact.updated", "artifact.deleted"],
      "description": "Event type discriminator"
    },
    "payload": {
      "type": "object",
      "properties": {
        "action": {
          "type": "string",
          "enum": ["created", "updated", "deleted"],
          "description": "Lifecycle action"
        },
        "kind": {
          "type": "string",
          "enum": ["transcript", "code", "document", "image", "audio"],
          "description": "Type of artifact"
        },
        "uri": {
          "type": "string",
          "format": "uri",
          "description": "File path or URL"
        },
        "title": {
          "type": ["string", "null"],
          "description": "Artifact title"
        },
        "content": {
          "type": ["string", "null"],
          "description": "Full content if applicable"
        },
        "metadata": {
          "type": "object",
          "description": "Additional metadata"
        }
      },
      "required": ["action", "kind", "uri"]
    }
  },
  "required": ["event_type", "payload"]
}
