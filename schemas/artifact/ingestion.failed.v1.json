{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://33god.dev/schemas/artifact/ingestion.failed.v1.json",
  "title": "Artifact Ingestion Failed Event",
  "description": "Artifact ingestion into RAG failed",
  "type": "object",
  "allOf": [
    { "$ref": "../_common/base_event.v1.json" }
  ],
  "properties": {
    "event_type": {
      "type": "string",
      "const": "artifact.ingestion.failed",
      "description": "Event type discriminator"
    },
    "payload": {
      "type": "object",
      "properties": {
        "artifact_uri": {
          "type": "string",
          "description": "URI of the artifact that failed ingestion"
        },
        "artifact_kind": {
          "type": "string",
          "description": "Type of artifact"
        },
        "error_message": {
          "type": "string",
          "description": "Error message"
        },
        "error_code": {
          "type": ["string", "null"],
          "description": "Error code if available"
        },
        "retry_count": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of retry attempts"
        },
        "is_retryable": {
          "type": "boolean",
          "description": "Whether the error is retryable"
        }
      },
      "required": ["artifact_uri", "artifact_kind", "error_message"]
    }
  },
  "required": ["event_type", "payload"]
}
