{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://33god.dev/schemas/theboard/meeting.created.v1.json",
  "title": "Meeting Created Event",
  "description": "Emitted when a new meeting is created. Payload contains initial meeting configuration.",
  "type": "object",
  "allOf": [
    { "$ref": "../_common/base_event.v1.json" },
    { "$ref": "../_common/theboard_extension.v1.json" }
  ],
  "properties": {
    "event_type": {
      "type": "string",
      "const": "theboard.meeting.created",
      "description": "Event type discriminator"
    },
    "payload": {
      "type": "object",
      "properties": {
        "topic": {
          "type": "string",
          "minLength": 1,
          "maxLength": 1000,
          "description": "Meeting topic or question to discuss"
        },
        "strategy": {
          "type": "string",
          "enum": ["sequential", "greedy"],
          "description": "Meeting execution strategy"
        },
        "max_rounds": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "description": "Maximum number of discussion rounds before stopping"
        },
        "agent_count": {
          "type": ["integer", "null"],
          "minimum": 1,
          "description": "Number of agents participating (null if not yet selected)"
        }
      },
      "required": ["topic", "strategy", "max_rounds"]
    }
  },
  "required": ["event_type", "payload"]
}
