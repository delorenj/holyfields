{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://33god.dev/schemas/theboard/meeting.round_completed.v1.json",
  "title": "Round Completed Event",
  "description": "Emitted when a meeting round completes. Payload contains round metrics and convergence indicators.",
  "type": "object",
  "allOf": [
    { "$ref": "../_common/base_event.v1.json" },
    { "$ref": "../_common/theboard_extension.v1.json" }
  ],
  "properties": {
    "event_type": {
      "type": "string",
      "const": "theboard.meeting.round_completed",
      "description": "Event type discriminator"
    },
    "payload": {
      "type": "object",
      "properties": {
        "round_num": {
          "type": "integer",
          "minimum": 1,
          "description": "Round number that just completed"
        },
        "agent_name": {
          "$ref": "../_common/types.v1.json#/$defs/agent_name",
          "description": "Name of agent who contributed in this round"
        },
        "response_length": {
          "type": "integer",
          "minimum": 0,
          "description": "Character length of agent's response"
        },
        "comment_count": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of comments extracted from response"
        },
        "avg_novelty": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Average novelty score of extracted comments (0.0 = repetitive, 1.0 = novel)"
        },
        "tokens_used": {
          "type": "integer",
          "minimum": 0,
          "description": "Total tokens consumed (input + output)"
        },
        "cost": {
          "type": "number",
          "minimum": 0,
          "description": "Cost in USD for this round's LLM calls"
        }
      },
      "required": ["round_num", "agent_name", "response_length", "comment_count", "avg_novelty", "tokens_used", "cost"]
    }
  },
  "required": ["event_type", "payload"]
}
