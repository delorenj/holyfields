{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://33god.dev/schemas/llm/error.v1.json",
  "title": "LLM Error Event (DEPRECATED)",
  "description": "[DEPRECATED] Use agent.thread.error instead. LLM interaction failed.",
  "type": "object",
  "allOf": [
    { "$ref": "../_common/base_event.v1.json" }
  ],
  "properties": {
    "event_type": {
      "type": "string",
      "const": "llm.error",
      "description": "Event type discriminator - DEPRECATED"
    },
    "payload": {
      "type": "object",
      "properties": {
        "provider": {
          "type": "string",
          "description": "LLM provider"
        },
        "error_message": {
          "type": "string",
          "description": "Error message"
        },
        "model": {
          "type": ["string", "null"],
          "description": "Model being used"
        },
        "error_code": {
          "type": ["string", "null"],
          "description": "Error code"
        },
        "is_retryable": {
          "type": "boolean",
          "description": "Whether error is retryable"
        },
        "retry_count": {
          "type": "integer",
          "minimum": 0,
          "description": "Retry attempts"
        },
        "_deprecated": {
          "type": "string",
          "const": "Use agent.thread.error instead",
          "description": "Deprecation notice"
        }
      },
      "required": ["provider", "error_message"]
    }
  },
  "required": ["event_type", "payload"]
}
