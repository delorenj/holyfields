{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://33god.dev/schemas/llm/response.v1.json",
  "title": "LLM Response Event (DEPRECATED)",
  "description": "[DEPRECATED] Use agent.thread.response instead. LLM responded to prompt.",
  "type": "object",
  "allOf": [
    { "$ref": "../_common/base_event.v1.json" }
  ],
  "properties": {
    "event_type": {
      "type": "string",
      "const": "llm.response",
      "description": "Event type discriminator - DEPRECATED"
    },
    "payload": {
      "type": "object",
      "properties": {
        "provider": {
          "type": "string",
          "description": "LLM provider"
        },
        "response": {
          "type": "string",
          "description": "Response text"
        },
        "model": {
          "type": ["string", "null"],
          "description": "Model used"
        },
        "tokens_used": {
          "type": ["integer", "null"],
          "minimum": 0,
          "description": "Tokens consumed"
        },
        "duration_ms": {
          "type": ["integer", "null"],
          "minimum": 0,
          "description": "Response time"
        },
        "_deprecated": {
          "type": "string",
          "const": "Use agent.thread.response instead",
          "description": "Deprecation notice"
        }
      },
      "required": ["provider", "response"]
    }
  },
  "required": ["event_type", "payload"]
}
